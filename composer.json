{
    "name": "truelayer/sdk",
    "description": "TrueLayer's payments platform SDK",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexandru Lighezan",
            "email": "alex.lighezan@truelayer.com"
        },
        {
            "name": "Stefan Adrian Danaita",
            "email": "me@dsa.io"
        },
        {
            "name": "Lee Boynton",
            "email": "lee.boynton@truelayer.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "TrueLayer\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TrueLayer\\Tests\\": "tests"
        }
    },
    "prefer-stable": true,
    "require": {
        "php": "^7.4 || ^8.0",
        "psr/http-client-implementation": "^1.0",
        "truelayer/signing": "0.0.1",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.4",
        "ramsey/uuid": "^4.2",
        "illuminate/validation": "^8.73",
        "illuminate/support": "^8.77"
    },
    "require-dev": {
        "pestphp/pest": "^1.20",
        "phpstan/phpstan": "^1.3.1",
        "friendsofphp/php-cs-fixer": "^3.3",
        "symfony/http-client": "^v5.4",
        "nyholm/psr7": "^1.4"
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse --memory-limit=-1",
        "test": "vendor/bin/pest",
        "cs-fix": "vendor/bin/php-cs-fixer fix"
    }
}
